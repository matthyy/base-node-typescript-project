{
    "name": "base-node-typescript-project",
    "version": "1.0.0",
    "description": "Initial setup for a node.js typescript project",
    "type": "module",
    "main": "index.ts",
    "scripts": {
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "dev": "nodemon --exec tsx src/index.ts",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "format": "prettier --write src",
        "format:check": "prettier --check src",
        "lint:format": "npm run lint:fix && npm run format",
        "check": "npm run lint && npm run format:check",
        "lint-staged": "lint-staged",
        "build": "tsc",
        "prepare": "husky"
    },
    "devDependencies": {
        "@tsconfig/node22": "^22.0.2",
        "@types/node": "^22.15.0",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "@vitest/coverage-v8": "^3.2.4",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-define-config": "^2.1.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-security": "^3.0.1",
        "eslint-plugin-vitest": "^0.5.4",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.6",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.44.0",
        "vitest": "^3.2.4"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/matthyy/base-node-typescript-project.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/matthyy/base-node-typescript-project/issues"
    },
    "homepage": "https://github.com/matthyy/base-node-typescript-project#readme",
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    }
}
