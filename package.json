        "eslint-define-config": "^2.1.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-security": "^3.0.1",
        "prettier": "^3.6.2",
        "typescript-eslint": "^8.44.0"
    },
    "repository": {
        "type": "git",
